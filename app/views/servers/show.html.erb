<h1>Server info</h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Api URL:</b>
  <%= @server.api_url %>
</p>

<p>
  <b>Username:</b>
  <%= @server.username %>
</p>

<p>
  <b>Password:</b>
  <%= @server.password %>
</p>

<h1>Last <%= @test_runs.count %> test runs</h1>

<table class="table table-striped">
<thead>
  <tr>
    <th>Test</th>
    <th>Result</th>
    <th>Ran</th>
  </tr>
</thead>

<tbody>
  <% @test_runs.each do |test_run| %>
    <tr>
      <td><%= test_run.test_description.summary %></td>
      <td>
        <%= result_icon(test_run) %>
      </td>
      <td><%= time_ago_in_words(test_run.created_at) + " ago" %></td>
    </tr>
  <% end %>
</tbody>
</table>

<%= link_to 'Edit', edit_server_path(@server) %> |
<%= link_to 'Back', servers_path %>
